@model SecuritySystemsManagerMVC.ViewModels.MaintenanceDeviceEditVm
@{
    ViewData["Title"] = "Create Maintenance Device";
}

@section Styles {
    <link rel="stylesheet" href="~/css/maintenance-devices.css" asp-append-version="true" />
}

<div class="maintenance-device-section">
    <div class="maintenance-device-header">
        <div class="maintenance-device-details-header">
            <div>
                <h2 class="mb-0">
                    <i class="bi bi-plus-circle me-2"></i>Add Maintenance Device
                </h2>
                <p class="text-muted mt-2">Add a new device to the maintenance record</p>
            </div>
            <div class="maintenance-device-actions">
                <a asp-action="List" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left me-1"></i> Back to List
                </a>
            </div>
        </div>
    </div>
    
    <div class="maintenance-device-body">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card device-form-card animate-fade-in">
                    <div class="card-header">
                        <h5 class="mb-0"><i class="bi bi-cpu me-2"></i>Device Information</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Create" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            
                            <div class="form-group mb-3">
                                <label asp-for="MaintenanceLogId" class="form-label"></label>
                                <select asp-for="MaintenanceLogId" asp-items="Model.AllLogs" class="form-select">
                                    <option value="">-- Select Maintenance Log --</option>
                                </select>
                                <span asp-validation-for="MaintenanceLogId" class="text-danger"></span>
                                <small class="form-text text-muted">Select the maintenance log this device belongs to</small>
                            </div>
                            
                            <div class="form-group mb-3">
                                <label asp-for="InstalledDeviceId" class="form-label"></label>
                                <select asp-for="InstalledDeviceId" asp-items="Model.AllInstalledDevices" class="form-select">
                                    <option value="">-- Select Device --</option>
                                </select>
                                <span asp-validation-for="InstalledDeviceId" class="text-danger"></span>
                                <small class="form-text text-muted">Select the device that needs maintenance</small>
                            </div>
                            
                            <div class="form-group mb-3">
                                <label asp-for="Notes" class="form-label"></label>
                                <textarea asp-for="Notes" class="form-control" rows="4" placeholder="Enter maintenance notes, issues found, etc."></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                            
                            <div class="form-check mb-4">
                                <input asp-for="IsFixed" class="form-check-input" />
                                <label asp-for="IsFixed" class="form-check-label"></label>
                                <span asp-validation-for="IsFixed" class="text-danger"></span>
                                <small class="form-text text-muted d-block">Check if the issue with this device has been fixed</small>
                            </div>
                            
                            <div class="device-form-actions">
                                <a asp-action="List" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle me-1"></i> Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-save me-1"></i> Create Device
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/maintenance-devices.js" asp-append-version="true"></script>
} 