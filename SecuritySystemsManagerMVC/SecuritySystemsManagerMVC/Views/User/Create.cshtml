@model SecuritySystemsManagerMVC.ViewModels.UserEditVm

@{
    ViewData["Title"] = "Create User";
}

<div class="container-fluid px-4 animate-fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-2 text-gray-800">Create User</h1>
            <p class="mb-0">Add a new user to the system</p>
        </div>
        <div>
            <a asp-action="List" class="btn btn-secondary">
                <i class="bi bi-arrow-left me-2"></i>Back to List
            </a>
        </div>
    </div>

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger mb-4">
            <h5 class="alert-heading">Form validation errors:</h5>
            <ul>
                @foreach (var modelState in ViewData.ModelState.Values)
                {
                    foreach (var error in modelState.Errors)
                    {
                        <li>@error.ErrorMessage</li>
                    }
                }
            </ul>
        </div>
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">User Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Username" class="form-label"></label>
                                    <input asp-for="Username" class="form-control" />
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Email" class="form-label"></label>
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="FirstName" class="form-label"></label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="LastName" class="form-label"></label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="RoleId" class="form-label"></label>
                                    <select asp-for="RoleId" class="form-select" asp-items="Model.AvailableRoles">
                                        <option value="">-- Select Role --</option>
                                    </select>
                                    <span asp-validation-for="RoleId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="ProfileImage" class="form-label">Profile Image</label>
                                    <input type="file" name="profileImageFile" class="form-control" accept="image/*" />
                                    <small class="form-text text-muted">Upload a profile image (optional)</small>
                                </div>
                            </div>
                        </div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Password</label>
                                    <input type="password" name="Password" class="form-control" required />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label class="form-label">Confirm Password</label>
                                    <input type="password" name="ConfirmPassword" class="form-control" required />
                                </div>
                            </div>
                        </div>
                        
                        <div class="d-flex justify-content-end mt-4">
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-2"></i>Create User
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-lg-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">Information</h5>
                </div>
                <div class="card-body">
                    <h6 class="mb-3">Role Permissions</h6>
                    <ul class="list-group mb-4">
                        <li class="list-group-item d-flex align-items-center">
                            <div class="me-3">
                                <i class="bi bi-shield-fill text-primary"></i>
                            </div>
                            <div>
                                <h6 class="mb-0">Admin</h6>
                                <small class="text-muted">Full system access</small>
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <div class="me-3">
                                <i class="bi bi-briefcase-fill text-success"></i>
                            </div>
                            <div>
                                <h6 class="mb-0">Manager</h6>
                                <small class="text-muted">Manage orders and technicians</small>
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <div class="me-3">
                                <i class="bi bi-tools text-warning"></i>
                            </div>
                            <div>
                                <h6 class="mb-0">Technician</h6>
                                <small class="text-muted">Handle assigned orders</small>
                            </div>
                        </li>
                        <li class="list-group-item d-flex align-items-center">
                            <div class="me-3">
                                <i class="bi bi-person-fill text-info"></i>
                            </div>
                            <div>
                                <h6 class="mb-0">Client</h6>
                                <small class="text-muted">Create and view own orders</small>
                            </div>
                        </li>
                    </ul>
                    
                    <div class="alert alert-info mb-0">
                        <i class="bi bi-info-circle me-2"></i>
                        <span>Users will receive an email with their login credentials.</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 