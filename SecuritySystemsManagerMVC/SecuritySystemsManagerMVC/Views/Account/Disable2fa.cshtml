@{
    ViewData["Title"] = "Disable Two-Factor Authentication (2FA)";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Account Settings</h5>
                </div>
                <div class="card-body">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="MyProfile">
                                <i class="bi bi-person me-2"></i> Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="EditProfile">
                                <i class="bi bi-pencil-square me-2"></i> Edit Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="ChangePassword">
                                <i class="bi bi-key me-2"></i> Password
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-action="TwoFactorAuthentication">
                                <i class="bi bi-shield-lock me-2"></i> Two-factor Authentication
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <p>
                            <span class="glyphicon glyphicon-warning-sign"></span>
                            <strong>This action only disables 2FA.</strong>
                        </p>
                        <p>
                            Disabling 2FA does not change the keys used in authenticator apps. If you wish to change the key
                            used in an authenticator app you should <a asp-action="ResetAuthenticator">reset your authenticator keys.</a>
                        </p>
                    </div>

                    <div>
                        <form method="post" asp-action="Disable2faPost">
                            <button class="btn btn-danger" type="submit">Disable 2FA</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 