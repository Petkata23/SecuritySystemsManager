@{
    ViewData["Title"] = "Reset Authenticator Key";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">Account Settings</h5>
                </div>
                <div class="card-body">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link" asp-action="MyProfile">
                                <i class="bi bi-person me-2"></i> Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="EditProfile">
                                <i class="bi bi-pencil-square me-2"></i> Edit Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-action="ChangePassword">
                                <i class="bi bi-key me-2"></i> Password
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" asp-action="TwoFactorAuthentication">
                                <i class="bi bi-shield-lock me-2"></i> Two-factor Authentication
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">@ViewData["Title"]</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <p>
                            <span class="glyphicon glyphicon-warning-sign"></span>
                            <strong>If you reset your authenticator key your authenticator app will not work until you reconfigure it.</strong>
                        </p>
                        <p>
                            This process disables 2FA until you verify your authenticator app.
                            If you do not complete your authenticator app configuration you may lose access to your account.
                        </p>
                    </div>
                    <div>
                        <form method="post" asp-action="ResetAuthenticatorPost">
                            <button class="btn btn-danger" type="submit">Reset authenticator key</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 