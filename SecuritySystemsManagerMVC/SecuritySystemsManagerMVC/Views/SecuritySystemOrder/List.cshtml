@model IEnumerable<SecuritySystemsManagerMVC.ViewModels.SecuritySystemOrderDetailsVm>

@{
    ViewData["Title"] = "Security System Orders";
}

<link rel="stylesheet" href="~/css/orders.css" />

<div class="container animate-fade-in">
    <div class="order-hero">
        <div class="container order-hero-content">
            <h1><i class="bi bi-shield-lock"></i> Security System Orders</h1>
            <p>Manage your security system orders, track installations, and monitor maintenance activities all in one place.</p>
            <a asp-action="Create" class="btn btn-order btn-order-primary">
                <i class="bi bi-plus-circle"></i> Create New Order
            </a>
        </div>
    </div>

    <div class="order-list-filters">
        <div class="row">
            <div class="col-md-4 mb-2 mb-md-0">
                <div class="input-group">
                    <span class="input-group-text"><i class="bi bi-search"></i></span>
                    <input type="text" id="orderSearchInput" class="form-control" placeholder="Search orders...">
                </div>
            </div>
            <div class="col-md-3 mb-2 mb-md-0">
                <select id="statusFilter" class="form-select">
                    <option value="">All Statuses</option>
                    <option value="Pending">Pending</option>
                    <option value="InProgress">In Progress</option>
                    <option value="Completed">Completed</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
            </div>
            <div class="col-md-3 mb-2 mb-md-0">
                <select id="dateFilter" class="form-select">
                    <option value="">All Dates</option>
                    <option value="today">Today</option>
                    <option value="week">This Week</option>
                    <option value="month">This Month</option>
                </select>
            </div>
            <div class="col-md-2">
                <button id="resetFilters" class="btn btn-secondary w-100">Reset</button>
            </div>
        </div>
    </div>

    <div class="row order-list">
        @if (Model != null && Model.Any())
        {
            foreach (var order in Model)
            {
                <div class="col-md-6 col-lg-4 order-item" 
                     data-status="@order.Status" 
                     data-date="@order.RequestedDate.ToString("yyyy-MM-dd")">
                    <div class="card order-card">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">@order.Title</h5>
                            <span class="status-badge status-@order.Status.ToString().ToLower()">@order.Status</span>
                        </div>
                        <div class="card-body">
                            <p class="card-text">@(order.Description?.Length > 100 ? order.Description.Substring(0, 100) + "..." : order.Description)</p>
                            
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-geo-alt me-2 text-primary"></i>
                                <span>@(order.Location?.Name ?? "No location")</span>
                            </div>
                            
                            <div class="d-flex align-items-center mb-3">
                                <i class="bi bi-telephone me-2 text-primary"></i>
                                <span>@order.PhoneNumber</span>
                            </div>
                            
                            <div class="d-flex align-items-center">
                                <i class="bi bi-calendar-event me-2 text-primary"></i>
                                <span>@order.RequestedDate.ToString("MMM dd, yyyy")</span>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-between">
                            <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-order-outline">
                                <i class="bi bi-eye"></i> Details
                            </a>
                            <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-sm btn-order-primary">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center py-5">
                <div class="mb-4">
                    <i class="bi bi-inbox text-secondary" style="font-size: 4rem;"></i>
                </div>
                <h3>No Orders Found</h3>
                <p class="text-muted">You don't have any security system orders yet.</p>
                <a asp-action="Create" class="btn btn-order btn-order-primary mt-3">
                    <i class="bi bi-plus-circle"></i> Create Your First Order
                </a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Search functionality
            $("#orderSearchInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $(".order-item").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
            
            // Status filter
            $("#statusFilter").on("change", function() {
                var value = $(this).val();
                if (value === "") {
                    $(".order-item").show();
                } else {
                    $(".order-item").hide();
                    $(".order-item[data-status='" + value + "']").show();
                }
            });
            
            // Date filter
            $("#dateFilter").on("change", function() {
                var value = $(this).val();
                var today = new Date();
                today.setHours(0, 0, 0, 0);
                
                if (value === "") {
                    $(".order-item").show();
                } else {
                    $(".order-item").each(function() {
                        var orderDate = new Date($(this).data("date"));
                        orderDate.setHours(0, 0, 0, 0);
                        
                        var showItem = false;
                        
                        if (value === "today") {
                            showItem = orderDate.getTime() === today.getTime();
                        } else if (value === "week") {
                            var weekStart = new Date(today);
                            weekStart.setDate(today.getDate() - today.getDay());
                            var weekEnd = new Date(weekStart);
                            weekEnd.setDate(weekStart.getDate() + 6);
                            
                            showItem = orderDate >= weekStart && orderDate <= weekEnd;
                        } else if (value === "month") {
                            showItem = orderDate.getMonth() === today.getMonth() && 
                                      orderDate.getFullYear() === today.getFullYear();
                        }
                        
                        $(this).toggle(showItem);
                    });
                }
            });
            
            // Reset filters
            $("#resetFilters").on("click", function() {
                $("#orderSearchInput").val("");
                $("#statusFilter").val("");
                $("#dateFilter").val("");
                $(".order-item").show();
            });
        });
    </script>
} 