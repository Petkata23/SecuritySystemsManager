@model SecuritySystemsManagerMVC.ViewModels.SecuritySystemOrderDetailsVm

@{
    ViewData["Title"] = "Delete Order";
}

<link rel="stylesheet" href="~/css/orders.css" />

<div class="container animate-fade-in">
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="List">Orders</a></li>
                <li class="breadcrumb-item"><a asp-action="Details" asp-route-id="@Model.Id">@Model.Title</a></li>
                <li class="breadcrumb-item active" aria-current="page">Delete</li>
            </ol>
        </nav>
    </div>

    <div class="card order-card">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0"><i class="bi bi-exclamation-triangle"></i> Delete Confirmation</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-danger mb-4">
                <h4 class="alert-heading"><i class="bi bi-exclamation-circle"></i> Warning!</h4>
                <p>Are you sure you want to delete this security system order? This action cannot be undone.</p>
                <hr>
                <p class="mb-0">All related data including installed devices, maintenance logs, and invoices will also be deleted.</p>
            </div>
            
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="detail-label">Title</div>
                    <div class="detail-value">@Model.Title</div>
                </div>
                <div class="col-md-6">
                    <div class="detail-label">Status</div>
                    <div class="detail-value">
                        <span class="status-badge status-@Model.Status.ToString().ToLower()">@Model.Status</span>
                    </div>
                </div>
            </div>
            
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="detail-label">Client</div>
                    <div class="detail-value">
                        @if (Model.Client != null)
                        {
                            @($"{Model.Client.FirstName} {Model.Client.LastName}")
                        }
                        else
                        {
                            <span class="text-muted">No client information</span>
                        }
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="detail-label">Location</div>
                    <div class="detail-value">
                        @if (Model.Location != null)
                        {
                            @Model.Location.Name
                        }
                        else
                        {
                            <span class="text-muted">No location information</span>
                        }
                    </div>
                </div>
            </div>
            
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="detail-label">Requested Date</div>
                    <div class="detail-value">@Model.RequestedDate.ToString("MMMM dd, yyyy")</div>
                </div>
                <div class="col-md-6">
                    <div class="detail-label">Created On</div>
                    <div class="detail-value">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</div>
                </div>
            </div>
            
            <div class="mb-4">
                <div class="detail-label">Description</div>
                <div class="detail-value">@Model.Description</div>
            </div>
            
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-order btn-secondary">
                        <i class="bi bi-arrow-left"></i> Back to Details
                    </a>
                    <button type="submit" class="btn btn-order btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this order?');">
                        <i class="bi bi-trash"></i> Delete Order
                    </button>
                </div>
            </form>
        </div>
    </div>
</div> 