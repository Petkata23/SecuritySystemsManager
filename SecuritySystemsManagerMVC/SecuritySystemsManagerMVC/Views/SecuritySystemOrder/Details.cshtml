@model SecuritySystemsManagerMVC.ViewModels.SecuritySystemOrderDetailsVm

@{
    ViewData["Title"] = "Order Details";
}

<link rel="stylesheet" href="~/css/orders.css" />

<div class="container animate-fade-in">
    <div class="mb-4">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-action="Index">Orders</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
            </ol>
        </nav>
    </div>

    <div class="card order-card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">@Model.Title</h3>
            <span class="status-badge status-@Model.Status.ToString().ToLower()">@Model.Status</span>
        </div>
        <div class="card-body order-details">
            <div class="row">
                <div class="col-md-8">
                    <div class="order-section">
                        <h4 class="order-section-title"><i class="bi bi-info-circle"></i> Order Information</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-label">Description</div>
                                <div class="detail-value">@Model.Description</div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-label">Phone Number</div>
                                <div class="detail-value">@Model.PhoneNumber</div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="detail-label">Requested Date</div>
                                <div class="detail-value">@Model.RequestedDate.ToString("MMMM dd, yyyy")</div>
                            </div>
                            <div class="col-md-6">
                                <div class="detail-label">Created On</div>
                                <div class="detail-value">@Model.CreatedAt.ToString("MMMM dd, yyyy HH:mm")</div>
                            </div>
                        </div>
                    </div>

                    <div class="order-section">
                        <h4 class="order-section-title"><i class="bi bi-geo-alt"></i> Location Details</h4>
                        @if (Model.Location != null)
                        {
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-label">Name</div>
                                    <div class="detail-value">@Model.Location.Name</div>
                                </div>
                                <div class="col-md-6">
                                    <div class="detail-label">Address</div>
                                    <div class="detail-value">@Model.Location.Address</div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="detail-label">Latitude</div>
                                    <div class="detail-value">@Model.Location.Latitude</div>
                                </div>
                                <div class="col-md-6">
                                    <div class="detail-label">Longitude</div>
                                    <div class="detail-value">@Model.Location.Longitude</div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <p class="text-muted">No location information available.</p>
                        }
                    </div>

                    @if (Model.InstalledDevices != null && Model.InstalledDevices.Any())
                    {
                        <div class="order-section">
                            <h4 class="order-section-title"><i class="bi bi-camera-video"></i> Installed Devices</h4>
                            <div class="row">
                                @foreach (var device in Model.InstalledDevices)
                                {
                                    <div class="col-md-6 mb-3">
                                        <div class="card device-card">
                                            <div class="card-body">
                                                <div class="device-type">@device.DeviceType</div>
                                                <h5 class="device-name">@device.Brand @device.Model</h5>
                                                <p class="mb-2">Quantity: @device.Quantity</p>
                                                <div class="d-flex justify-content-between align-items-center">
                                                    <small class="text-muted">Installed: @device.DateInstalled.ToString("MMM dd, yyyy")</small>
                                                    <a href="#" class="btn btn-sm btn-outline-primary">Details</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    }

                    @if (Model.MaintenanceLogs != null && Model.MaintenanceLogs.Any())
                    {
                        <div class="order-section">
                            <h4 class="order-section-title"><i class="bi bi-tools"></i> Maintenance History</h4>
                            <div class="order-timeline">
                                @foreach (var log in Model.MaintenanceLogs.OrderByDescending(l => l.Date))
                                {
                                    <div class="order-timeline-item">
                                        <div class="order-timeline-date">@log.Date.ToString("MMMM dd, yyyy")</div>
                                        <h5 class="order-timeline-title">@log.OrderTitle</h5>
                                        <p class="order-timeline-content">@log.Description</p>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>

                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="bi bi-person"></i> Client Information</h5>
                        </div>
                        <div class="card-body">
                            @if (Model.Client != null)
                            {
                                <div class="text-center mb-3">
                                    @if (!string.IsNullOrEmpty(Model.Client.ProfileImage))
                                    {
                                        <img src="@Model.Client.ProfileImage" alt="@Model.Client.FirstName @Model.Client.LastName" 
                                             class="rounded-circle" style="width: 100px; height: 100px; object-fit: cover;">
                                    }
                                    else
                                    {
                                        <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white" 
                                             style="width: 100px; height: 100px; margin: 0 auto;">
                                            <i class="bi bi-person" style="font-size: 3rem;"></i>
                                        </div>
                                    }
                                </div>
                                <h5 class="text-center mb-3">@Model.Client.FirstName @Model.Client.LastName</h5>
                                <div class="d-flex align-items-center mb-2">
                                    <i class="bi bi-envelope me-2 text-primary"></i>
                                    <span>@Model.Client.Email</span>
                                </div>
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-person-badge me-2 text-primary"></i>
                                    <span>@Model.Client.Username</span>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted">No client information available.</p>
                            }
                        </div>
                    </div>

                    @if (Model.Technicians != null && Model.Technicians.Any())
                    {
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="bi bi-people"></i> Assigned Technicians</h5>
                            </div>
                            <div class="card-body">
                                <ul class="list-group list-group-flush">
                                    @foreach (var tech in Model.Technicians)
                                    {
                                        <li class="list-group-item bg-transparent">
                                            <div class="d-flex align-items-center">
                                                <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center text-white me-3" 
                                                     style="width: 40px; height: 40px;">
                                                    <i class="bi bi-person"></i>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@tech.TechnicianFullName</h6>
                                                    <small class="text-muted">Assigned: @tech.AssignedAt.ToString("MMM dd, yyyy")</small>
                                                </div>
                                            </div>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    }

                    @if (Model.Invoice != null)
                    {
                        <div class="card mb-4">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="bi bi-receipt"></i> Invoice</h5>
                            </div>
                            <div class="card-body">
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Invoice Number:</span>
                                    <span class="fw-bold">#@Model.Invoice.Id</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Issue Date:</span>
                                    <span>@Model.Invoice.IssuedOn.ToString("MMM dd, yyyy")</span>
                                </div>
                                <div class="d-flex justify-content-between mb-2">
                                    <span>Status:</span>
                                    <span class="badge bg-@(Model.Invoice.IsPaid ? "success" : "warning")">
                                        @(Model.Invoice.IsPaid ? "Paid" : "Unpaid")
                                    </span>
                                </div>
                                <div class="d-flex justify-content-between mt-3">
                                    <span class="fw-bold">Total Amount:</span>
                                    <span class="fw-bold">$@Model.Invoice.TotalAmount.ToString("N2")</span>
                                </div>
                            </div>
                            <div class="card-footer">
                                <a href="#" class="btn btn-sm btn-primary w-100">View Full Invoice</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <a asp-action="List" class="btn btn-order btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-order btn-order-primary me-2">
                        <i class="bi bi-pencil"></i> Edit
                    </a>
                    <button type="button" class="btn btn-order btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this order? This action cannot be undone.
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>
