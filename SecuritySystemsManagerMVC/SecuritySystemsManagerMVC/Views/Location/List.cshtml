@model IEnumerable<SecuritySystemsManagerMVC.ViewModels.LocationDetailsVm>
@{
    ViewData["Title"] = "Locations";
}

@section Styles {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.4.1/dist/MarkerCluster.css" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet.markercluster@1.4.1/dist/MarkerCluster.Default.css" />
    <link rel="stylesheet" href="~/css/locations.css" />
}

<div class="container-fluid mt-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="display-6">@ViewData["Title"]</h2>
            <p class="lead">List of all locations in the system</p>
        </div>
        <div class="col-md-auto d-flex align-items-center">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add New Location
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div id="locationsMap" class="locations-list-map"></div>
        </div>
    </div>

    <div class="row mt-4">
        @if (Model != null && Model.Any())
        {
            @foreach (var location in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card location-card">
                        <div class="card-header">
                            <h5 class="mb-0">@location.Name</h5>
                        </div>
                        <div class="card-body">
                            <p class="location-address">
                                <i class="bi bi-geo-alt"></i> @location.Address
                            </p>
                            @if (!string.IsNullOrEmpty(location.Description))
                            {
                                <p class="location-description">
                                    <i class="bi bi-info-circle"></i> @location.Description
                                </p>
                            }
                            <div class="btn-group">
                                <a asp-action="Details" asp-route-id="@location.Id" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@location.Id" class="btn btn-sm btn-warning">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-route-id="@location.Id" class="btn btn-sm btn-danger">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12">
                <div class="alert alert-info">
                    <i class="bi bi-info-circle"></i> No locations available. <a asp-action="Create">Create a new location</a>.
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <script src="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js"></script>
    <script src="https://unpkg.com/leaflet.markercluster@1.4.1/dist/leaflet.markercluster.js"></script>
    <script src="~/js/locations.js"></script>
    <script src="~/js/locations-list.js"></script>
} 