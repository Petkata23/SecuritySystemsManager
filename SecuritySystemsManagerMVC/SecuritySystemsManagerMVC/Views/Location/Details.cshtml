@model SecuritySystemsManagerMVC.ViewModels.LocationDetailsVm

@{
    ViewData["Title"] = "Location Details";
}

@section Styles {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <link rel="stylesheet" href="~/css/locations.css" />
}

<div class="container-fluid mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="List">Locations</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
        </ol>
    </nav>

    <input type="hidden" id="locationId" value="@Model.Id" />

    <div class="row mb-4">
        <div class="col">
            <h2 class="display-6">@Model.Name</h2>
            <p class="lead">Location Details</p>
        </div>
        <div class="col-md-auto d-flex align-items-center">
            <div class="btn-group">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
                <a asp-action="List" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="location-details-container">
                <div class="location-details-header">
                    <h4><i class="bi bi-geo-alt-fill"></i> Location Information</h4>
                </div>
                <div class="location-details-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <span class="location-details-label">Name</span>
                        </div>
                        <div class="col-md-8">
                            <span class="location-details-value">@Model.Name</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <span class="location-details-label">Address</span>
                        </div>
                        <div class="col-md-8">
                            <span class="location-details-value">@Model.Address</span>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <span class="location-details-label">Description</span>
                            </div>
                            <div class="col-md-8">
                                <span class="location-details-value">@Model.Description</span>
                            </div>
                        </div>
                    }
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <span class="location-details-label">Coordinates</span>
                        </div>
                        <div class="col-md-8">
                            <span class="location-details-value">
                                <i class="bi bi-geo"></i> @Model.Latitude, @Model.Longitude
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="location-details-map" id="locationDetailsMap" 
                 data-latitude="@Model.Latitude" 
                 data-longitude="@Model.Longitude" 
                 data-name="@Model.Name" 
                 data-address="@Model.Address"
                 data-description="@Model.Description">
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-12">
            <div class="location-details-container">
                <div class="location-details-header">
                    <h4><i class="bi bi-clipboard-check"></i> Orders at this Location</h4>
                </div>
                <div class="location-details-body">
                    @if (Model.Orders != null && Model.Orders.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Order Number</th>
                                        <th>Date</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var order in Model.Orders)
                                    {
                                        <tr>
                                            <td>@order.Title</td>
                                            <td>@order.RequestedDate.ToString("dd/MM/yyyy")</td>
                                            <td>
                                                <span class="badge @GetStatusBadgeClass(order.Status.ToString())">
                                                    @order.Status
                                                </span>
                                            </td>
                                            <td>
                                                <a asp-controller="SecuritySystemOrder" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-primary">
                                                    <i class="bi bi-eye"></i> Details
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i> No orders associated with this location.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <script src="~/js/locations.js"></script>
    <script src="~/js/locations-details.js"></script>
}

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "pending" => "badge-pending",
            "in progress" => "badge-in-progress",
            "completed" => "badge-completed",
            "cancelled" => "badge-cancelled",
            _ => "badge-secondary"
        };
    }
} 