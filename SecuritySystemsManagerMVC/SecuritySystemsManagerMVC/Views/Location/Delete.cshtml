@model SecuritySystemsManagerMVC.ViewModels.LocationDetailsVm

@{
    ViewData["Title"] = "Delete Location";
}

@section Styles {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <link rel="stylesheet" href="~/css/locations.css" />
}

<div class="container-fluid mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="List">Locations</a></li>
            <li class="breadcrumb-item active" aria-current="page">Delete</li>
        </ol>
    </nav>

    <input type="hidden" id="locationId" value="@Model.Id" />

    <div class="row mb-4">
        <div class="col">
            <h2 class="display-6">Delete Location</h2>
            <p class="lead">Are you sure you want to delete this location?</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="location-details-container">
                <div class="location-details-header">
                    <h4><i class="bi bi-geo-alt-fill"></i> Location Information</h4>
                </div>
                <div class="location-details-body">
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <span class="location-details-label">Name</span>
                        </div>
                        <div class="col-md-8">
                            <span class="location-details-value">@Model.Name</span>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <span class="location-details-label">Address</span>
                        </div>
                        <div class="col-md-8">
                            <span class="location-details-value">@Model.Address</span>
                        </div>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Description))
                    {
                        <div class="row mb-3">
                            <div class="col-md-4">
                                <span class="location-details-label">Description</span>
                            </div>
                            <div class="col-md-8">
                                <span class="location-details-value">@Model.Description</span>
                            </div>
                        </div>
                    }
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <span class="location-details-label">Coordinates</span>
                        </div>
                        <div class="col-md-8">
                            <span class="location-details-value">
                                <i class="bi bi-geo"></i> @Model.Latitude, @Model.Longitude
                            </span>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Orders != null && Model.Orders.Any())
            {
                <div class="alert alert-warning mt-3">
                    <i class="bi bi-exclamation-triangle"></i> <strong>Warning!</strong> This location has @Model.Orders.Count() associated order(s). Deleting this location will affect these orders.
                </div>
            }

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="location-action-buttons">
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                        <i class="bi bi-x-circle"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
        <div class="col-md-6">
            <div id="deleteLocationMap" class="location-details-map"
                 data-latitude="@Model.Latitude" 
                 data-longitude="@Model.Longitude" 
                 data-name="@Model.Name" 
                 data-address="@Model.Address"
                 data-description="@Model.Description">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <script src="~/js/locations.js"></script>
    <script src="~/js/locations-delete.js"></script>
} 