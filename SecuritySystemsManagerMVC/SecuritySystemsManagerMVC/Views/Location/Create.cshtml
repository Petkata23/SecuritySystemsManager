@model SecuritySystemsManagerMVC.ViewModels.LocationEditVm

@{
    ViewData["Title"] = "Create Location";
}

@section Styles {
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin="" />
    <link rel="stylesheet" href="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.css" />
    <link rel="stylesheet" href="~/css/locations.css" />
}

<div class="container-fluid mt-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
            <li class="breadcrumb-item"><a asp-action="List">Locations</a></li>
            <li class="breadcrumb-item active" aria-current="page">Create</li>
        </ol>
    </nav>

    <div class="row mb-4">
        <div class="col">
            <h2 class="display-6">@ViewData["Title"]</h2>
            <p class="lead">Add a new location to the system</p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="location-form-container">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="location-form-group">
                        <label asp-for="Name" class="form-label">Location Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Enter location name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    
                    <div class="location-form-group">
                        <label asp-for="Address" class="form-label">Address</label>
                        <input asp-for="Address" class="form-control" id="addressInput" placeholder="Enter address" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    
                    <div class="location-form-group">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Enter location description"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    
                    <div class="location-form-group">
                        <label class="form-label">Coordinates</label>
                        <p class="text-muted small">Select a location on the map or enter coordinates manually</p>
                        
                        <div class="coordinates-group">
                            <div class="form-group">
                                <label asp-for="Latitude" class="form-label">Latitude</label>
                                <input asp-for="Latitude" class="form-control" id="latitudeInput" placeholder="Latitude" />
                                <span asp-validation-for="Latitude" class="text-danger"></span>
                            </div>
                            
                            <div class="form-group">
                                <label asp-for="Longitude" class="form-label">Longitude</label>
                                <input asp-for="Longitude" class="form-control" id="longitudeInput" placeholder="Longitude" />
                                <span asp-validation-for="Longitude" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="location-action-buttons">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save
                        </button>
                        <a asp-action="List" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-md-6">
            <div id="createLocationMap" class="location-edit-map"></div>
            <div class="alert alert-info">
                <i class="bi bi-info-circle"></i> Click on the map to set the location coordinates or search for an address using the search box in the top-right corner.
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
    <script src="https://unpkg.com/leaflet-control-geocoder/dist/Control.Geocoder.js"></script>
    <script src="~/js/locations.js"></script>
    <script src="~/js/locations-create.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 