@{
    ViewData["Title"] = "Server Error";
    Layout = "_Layout";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <div class="error-page">
                <div class="error-code">
                    <h1 class="display-1 text-danger">500</h1>
                </div>
                <div class="error-message">
                    <h2 class="mb-4">Internal Server Error</h2>
                    <p class="lead text-muted mb-4">
                        Something went wrong on our end. We're working to fix the problem. 
                        Please try again later.
                    </p>
                    <div class="error-actions">
                        <a href="/" class="btn btn-primary me-3">
                            <i class="bi bi-house me-2"></i>Go to Home
                        </a>
                        <a href="javascript:location.reload()" class="btn btn-outline-secondary me-3">
                            <i class="bi bi-arrow-clockwise me-2"></i>Try Again
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .error-page {
        padding: 4rem 0;
    }
    
    .error-code h1 {
        font-size: 8rem;
        font-weight: 300;
        color: #dc3545;
        text-shadow: 2px 2px 4px rgba(220,53,69,0.2);
        margin-bottom: 2rem;
    }
    
    .error-message h2 {
        color: #495057;
        font-weight: 600;
    }
    
    .error-actions {
        margin-top: 3rem;
    }
    
    .error-actions .btn {
        padding: 0.75rem 2rem;
        font-weight: 500;
    }
    
    @media (max-width: 768px) {
        .error-code h1 {
            font-size: 6rem;
        }
        
        .error-actions .btn {
            display: block;
            width: 100%;
            margin-bottom: 1rem;
        }
        
        .error-actions .btn:last-child {
            margin-bottom: 0;
        }
    }
</style> 