<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Security Systems Hristovi provides professional security solutions for homes and businesses across Bulgaria." />
    <meta http-equiv="Cache-control" content="public, max-age=31536000">
    <title>@ViewData["Title"] - Security Systems Hristovi</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/navbar-mobile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/forms-mobile.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/tables-mobile.css" asp-append-version="true" />
    <link rel="icon" type="image/svg+xml" href="~/img/favicon.svg">
    @await RenderSectionAsync("Styles", required: false)
    <style>
        /* Inline styles for critical rendering */
        .profile-pic {
            opacity: 0;
            animation: fadeIn 0.3s ease forwards;
        }
        
        @@keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        /* Navigation separator styles */
        .nav-separator {
            height: 24px;
            width: 1px;
            background-color: rgba(0, 0, 0, 0.1);
            margin: 0 15px;
            align-self: center;
        }

        @@media (max-width: 991.98px) {
            .nav-separator {
                height: 1px;
                width: 100%;
                margin: 8px 0;
            }
        }

        /* Improved responsive navbar */
        .navbar-brand {
            display: flex;
            align-items: center;
            margin: 0;
            padding: 0;
        }

        .logo-icon {
            font-size: 2rem;
            color: var(--secondary-color);
            margin-right: 10px;
        }

        .logo-text {
            font-family: 'Montserrat', sans-serif;
            font-size: 1.5rem;
            color: var(--light-color);
            white-space: nowrap;
        }

        /* Responsive logo adjustments */
        @@media (max-width: 1200px) {
            .logo-text {
                font-size: 1.3rem;
            }
            .logo-icon {
                font-size: 1.8rem;
            }
        }

        @@media (max-width: 992px) {
            .logo-text {
                font-size: 1.2rem;
            }
            .logo-icon {
                font-size: 1.6rem;
                margin-right: 8px;
            }
        }

        @@media (max-width: 768px) {
            .logo-text {
                font-size: 1.1rem;
            }
            .logo-icon {
                font-size: 1.4rem;
                margin-right: 6px;
            }
        }

        @@media (max-width: 576px) {
            .logo-text {
                font-size: 1rem;
                max-width: 150px;
                overflow: hidden;
                text-overflow: ellipsis;
            }
            .logo-icon {
                font-size: 1.2rem;
                margin-right: 4px;
            }
        }

        /* Improved navbar navigation */
        .navbar-nav .nav-link {
            color: var(--text-color);
            font-weight: 500;
            padding: 0.7rem 1rem;
            margin: 0 4px;
            position: relative;
            display: flex;
            align-items: center;
            white-space: nowrap;
        }

        @@media (max-width: 1200px) {
            .navbar-nav .nav-link {
                padding: 0.6rem 0.8rem;
                margin: 0 2px;
            }
        }

        @@media (max-width: 992px) {
            .navbar-nav .nav-link {
                padding: 0.5rem 0.75rem;
                margin: 0;
            }
        }

        /* Right navigation improvements */
        .navbar-nav.right-nav {
            display: flex;
            align-items: center;
            margin-left: auto;
        }

        .nav-divider-vertical {
            height: 24px;
            width: 1px;
            background-color: rgba(255, 255, 255, 0.1);
            margin: 0 15px;
            align-self: center;
        }

        @@media (max-width: 992px) {
            .nav-divider-vertical {
                display: none;
            }
        }

        /* Container improvements for better spacing */
        .navbar .container {
            max-width: 1400px;
            padding-left: 15px;
            padding-right: 15px;
        }

        @@media (max-width: 1400px) {
            .navbar .container {
                max-width: 100%;
            }
        }

        /* Top bar improvements */
        .top-bar .container {
            max-width: 1400px;
        }

        @@media (max-width: 1400px) {
            .top-bar .container {
                max-width: 100%;
            }
        }

        /* Page title section improvements */
        .page-title-section .container {
            max-width: 1400px;
        }

        @@media (max-width: 1400px) {
            .page-title-section .container {
                max-width: 100%;
            }
        }

        /* Align all sections with consistent padding */
        .top-bar .container,
        .navbar .container,
        .page-title-section .container {
            padding-left: 15px;
            padding-right: 15px;
        }

        @@media (max-width: 768px) {
            .top-bar .container,
            .navbar .container,
            .page-title-section .container {
                padding-left: 10px;
                padding-right: 10px;
            }
        }

        @@media (max-width: 576px) {
            .top-bar .container,
            .navbar .container,
            .page-title-section .container {
                padding-left: 8px;
                padding-right: 8px;
            }
        }

        /* Ensure all sections are properly aligned */
        .top-bar,
        .main-header,
        .page-title-section {
            width: 100%;
            display: flex;
            justify-content: center;
        }

        .top-bar > .container,
        .main-header .navbar > .container,
        .page-title-section > .container {
            width: 100%;
            max-width: 1400px;
        }
    </style>
</head>
<body class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "home-page" : "")">
    <!-- Top Bar -->
    <div class="top-bar d-none d-md-block">
        <div class="home-container">
            <div class="row">
                <div class="col-md-8">
                    <ul class="list-inline top-bar-info mb-0">
                        <li class="list-inline-item"><i class="bi bi-envelope"></i> info@securityhristovi.com</li>
                        <li class="list-inline-item"><i class="bi bi-phone"></i> +359 888 123 456</li>
                        <li class="list-inline-item"><i class="bi bi-clock"></i> Mon-Fri: 9:00 - 18:00</li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <ul class="list-inline top-bar-social mb-0 text-end">
                        <li class="list-inline-item"><a href="#"><i class="bi bi-facebook"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="bi bi-instagram"></i></a></li>
                        <li class="list-inline-item"><a href="#"><i class="bi bi-linkedin"></i></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Header -->
    <header class="main-header">
        <nav class="navbar navbar-expand-lg">
            <div class="home-container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-shield-lock logo-icon"></i>
                    <span class="logo-text">Security Systems Hristovi</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")" asp-controller="Home" asp-action="Index"><i class="bi bi-house-door me-2"></i>Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Privacy" ? "active" : "")" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-check me-2"></i>Privacy</a>
                        </li>
                    </ul>

                    <ul class="navbar-nav">

                        <!-- Separator between navigation groups -->
                        <li class="d-none d-lg-block">
                            <div class="nav-separator"></div>
                        </li>
                        <li class="d-lg-none">
                            <hr class="dropdown-divider nav-separator">
                        </li>

                        <!-- Authenticated user navigation group -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="SecuritySystemOrder" asp-action="List">
                                    <i class="bi bi-cart me-2"></i>Orders
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Invoice" ? "active" : "")" asp-controller="Invoice" asp-action="List">
                                    <i class="bi bi-receipt me-2"></i>Invoices
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "MaintenanceLog" ? "active" : "")" asp-controller="MaintenanceLog" asp-action="List">
                                    <i class="bi bi-tools me-2"></i>Maintenance
                                </a>
                            </li>
                        }
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Location" asp-action="List"><i class="bi bi-geo-alt me-2"></i>Locations</a>
                            </li>
                        }
                        @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                        {
                            <!-- Administration Dropdown Menu -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="administrationDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-gear me-2"></i>Administration
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="administrationDropdown">
                                    <li><a class="dropdown-item" asp-controller="User" asp-action="List"><i class="bi bi-people me-2"></i>Users</a></li>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a class="dropdown-item" asp-controller="Role" asp-action="List"><i class="bi bi-person-badge me-2"></i>Roles</a></li>
                                    }
                                </ul>
                            </li>
                        }
                    </ul>


                    <ul class="navbar-nav ms-auto">

                        <!-- Separator between navigation groups -->
                        <li class="d-none d-lg-block">
                            <div class="nav-separator"></div>
                        </li>
                        <li class="d-lg-none">
                            <hr class="dropdown-divider nav-separator">
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown notification-dropdown">
                                @await Html.PartialAsync("_NotificationsPartial")
                            </li>
                            <li class="nav-item dropdown profile-dropdown">
                                @await Html.PartialAsync("_UserProfilePartial")
                            </li>
                        }
                        else
                        {
                            @await Html.PartialAsync("_LoginPartial")
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Page Title Section (if not home page) -->
    @if (ViewContext.RouteData.Values["controller"]?.ToString() != "Home" || ViewContext.RouteData.Values["action"]?.ToString() != "Index")
    {
        <div class="page-title-section">
            <div class="home-container">
                <h1 class="page-title">@ViewBag.Title</h1>
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@ViewBag.Title</li>
                    </ol>
                </nav>
            </div>
        </div>
    }

    <!-- Main Content -->
    <main class="main-content @(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "home-main-content" : "")">
        <div class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "" : "container")">
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["ErrorMessage"]
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
            }
            
            @RenderBody()
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="footer-bottom text-center">
            <div class="container">
                <div class="copyright">
                    &copy; @DateTime.Now.Year <strong><span>Security Systems Hristovi</span></strong>. All Rights Reserved
                    <div class="mt-2">
                        <a asp-controller="Home" asp-action="Privacy" class="text-muted text-decoration-none">Privacy Policy</a>
                    </div>
                </div>
            </div>
        </div>
    </footer>

    <!-- Back to top button -->
    <a href="#" class="back-to-top"><i class="bi bi-arrow-up"></i></a>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
