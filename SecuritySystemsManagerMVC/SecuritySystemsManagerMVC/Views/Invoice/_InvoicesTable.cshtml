@model IEnumerable<SecuritySystemsManagerMVC.ViewModels.InvoiceDetailsVm>
@using SecuritySystemsManager.Shared

@{
    var userRole = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
    var isClient = userRole == "Client";
    var canManageInvoices = userRole == "Admin" || userRole == "Manager";
    var canCreateInvoices = userRole == "Admin" || userRole == "Manager" || userRole == "Technician";
    var hasInvoicesBeforeFilter = ViewBag.HasInvoicesBeforeFilter ?? false;
}

@if (Model.Any())
{
    <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
            <h5><i class="bi bi-receipt"></i> Manage Invoices</h5>
            <div class="header-actions">
                <span class="text-muted">Showing @Model.Count() invoices</span>
            </div>
        </div>
    </div>
    
    <div class="card-body p-0">
        <div class="invoice-list-container">
            <div class="invoice-list-body">
                @foreach (var invoice in Model)
                {
                    <div class="invoice-list-item">
                        <div class="invoice-list-item-info">
                            <div class="invoice-list-item-number">Invoice #@invoice.Id.ToString("D6")</div>
                            <div class="invoice-list-item-date">
                                <i class="bi bi-calendar-event me-1"></i>
                                @invoice.IssuedOn.ToString(Constants.DateFormat)
                            </div>
                            <div class="invoice-list-item-client">@invoice.OrderTitle</div>
                        </div>
                        <div class="d-flex align-items-center gap-4">
                            <div class="invoice-list-item-amount">$@invoice.TotalAmount.ToString("N2")</div>
                            <div class="invoice-status @(invoice.IsPaid ? "status-paid" : "status-unpaid")">
                                <i class="bi @(invoice.IsPaid ? "bi-check-circle" : "bi-clock") me-1"></i>
                                @(invoice.IsPaid ? "Paid" : "Unpaid")
                            </div>
                            <div class="invoice-list-item-actions">
                                <a asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-sm btn-outline-primary" title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                @if (canManageInvoices)
                                {
                                    <a asp-action="Edit" asp-route-id="@invoice.Id" class="btn btn-sm btn-outline-secondary" title="Edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@invoice.Id" class="btn btn-sm btn-outline-danger" title="Delete">
                                        <i class="bi bi-trash"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Pagination -->
    <div class="card-footer">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <span class="text-muted">Showing @Model.Count() invoices</span>
            </div>
            <nav aria-label="Invoice pagination">
                <ul class="pagination mb-0">
                    @if (ViewBag.CurrentPage > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="#" onclick="loadInvoicesPage(@(ViewBag.CurrentPage - 1))" aria-label="Previous">
                                <span aria-hidden="true">&laquo;</span>
                            </a>
                        </li>
                    }

                    @for (int i = 1; i <= (ViewBag.TotalPages ?? 1); i++)
                    {
                        <li class="page-item @(i == (ViewBag.CurrentPage ?? 1) ? "active" : "")">
                            <a class="page-link" href="#" onclick="loadInvoicesPage(@i)">@i</a>
                        </li>
                    }

                    @if ((ViewBag.CurrentPage ?? 1) < (ViewBag.TotalPages ?? 1))
                    {
                        <li class="page-item">
                            <a class="page-link" href="#" onclick="loadInvoicesPage(@(ViewBag.CurrentPage + 1))" aria-label="Next">
                                <span aria-hidden="true">&raquo;</span>
                            </a>
                        </li>
                    }
                </ul>
            </nav>
        </div>
    </div>
}
else
{
    <div class="card-body">
        <div class="text-center py-5">
            <i class="bi bi-receipt text-muted" style="font-size: 3rem;"></i>
            <h4 class="mt-3">No Invoices Found</h4>
            <p class="text-muted">
                @if (hasInvoicesBeforeFilter)
                {
                    <span>No invoices match your search criteria.</span>
                }
                else
                {
                    <span>There are no invoices in the system yet.</span>
                }
            </p>
            @if (canCreateInvoices && !hasInvoicesBeforeFilter)
            {
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle me-2"></i>Create First Invoice
                </a>
            }
        </div>
    </div>
} 