@model IEnumerable<SecuritySystemsManagerMVC.ViewModels.InvoiceDetailsVm>
@using SecuritySystemsManager.Shared
@{
    ViewData["Title"] = "Invoices";
    var userRole = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
    var isClient = userRole == "Client";
    var canCreateInvoices = userRole == "Admin" || userRole == "Manager" || userRole == "Technician";
}

@section Styles {
    <link rel="stylesheet" href="~/css/invoice/invoice.css" asp-append-version="true" />
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="mb-0">
                <i class="bi bi-receipt me-2"></i>Invoices
            </h1>
            <p class="text-muted">Manage and track all system invoices</p>
        </div>
        @if (canCreateInvoices)
        {
            <div>
                <a asp-action="Create" class="btn btn-primary">
                    <i class="bi bi-plus-circle me-2"></i>Create New Invoice
                </a>
            </div>
        }
    </div>

    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Invoices</h5>
                    <h2 class="mb-0">@Model.Count()</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Paid Invoices</h5>
                    <h2 class="mb-0">@Model.Count(i => i.IsPaid)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title">Unpaid Invoices</h5>
                    <h2 class="mb-0">@Model.Count(i => !i.IsPaid)</h2>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card" style="background-color: var(--info-color); color: white;">
                <div class="card-body">
                    <h5 class="card-title">Total Amount</h5>
                    <h2 class="mb-0">$@Model.Sum(i => i.TotalAmount).ToString("N2")</h2>
                </div>
            </div>
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Filter Card -->
        <div class="card filter-card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h5><i class="bi bi-funnel"></i> Filter Invoices</h5>
                <button class="btn btn-sm btn-outline-secondary btn-filter-toggle" type="button" data-bs-toggle="collapse" data-bs-target="#filterCollapse">
                    <i class="bi bi-sliders me-1"></i>Toggle Filters
                </button>
            </div>
            <div class="collapse" id="filterCollapse">
                <div class="card-body">
                    <form id="filterForm" method="get" class="row g-3">
                        <div class="col-md-6">
                            <label class="form-label">Payment Status</label>
                            <select id="paymentStatusFilter" class="form-select">
                                <option value="">All Statuses</option>
                                <option value="paid">Paid</option>
                                <option value="unpaid">Unpaid</option>
                            </select>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Search</label>
                            <div class="input-group">
                                <input type="text" id="searchInput" class="form-control" placeholder="Search invoices...">
                                <button class="btn btn-primary" type="button" id="searchBtn">
                                    <i class="bi bi-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Invoices Table Card -->
        <div class="card invoices-card" id="invoicesTableContainer">
            @await Html.PartialAsync("_InvoicesTable", Model)
        </div>
    }
    else
    {
        <div class="text-center py-5" style="background-color: var(--card-bg)">
            <i class="bi bi-receipt text-muted" style="font-size: 3rem;"></i>
            <h4 class="mt-3">No Invoices Found</h4>
            <p class="text-muted">There are no invoices in the system for you yet.</p>
            @if (canCreateInvoices)
            {
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="bi bi-plus-circle me-2"></i>Create First Invoice
                </a>
            }
        </div>
    }
</div>

@section Scripts {
    <script>
        // Pass filter values from server to JavaScript
        var searchTermFilter = '@ViewBag.SearchTermFilter';
        var paymentStatusFilter = '@ViewBag.PaymentStatusFilter';
    </script>
    <script src="~/js/invoice-list.js" asp-append-version="true"></script>
} 