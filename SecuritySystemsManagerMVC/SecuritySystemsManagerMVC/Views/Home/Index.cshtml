@{
    ViewData["Title"] = "Home";
    Layout = "_Layout";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container-fluid">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="hero-title">Advanced Security Systems for Modern Protection</h1>
                <p class="hero-text">Security Systems Hristovi delivers cutting-edge security solutions for businesses and homes. Our integrated systems provide complete protection and peace of mind.</p>
                <div class="hero-buttons">
                    <a href="#services" class="btn btn-primary btn-lg">Explore Solutions</a>
                    @if (User.Identity.IsAuthenticated)
                    {
                        <a asp-controller="SecuritySystemOrder" asp-action="Create" class="btn btn-outline-secondary btn-lg">Create Order</a>
                    }
                    else
                    {
                        <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-secondary btn-lg">Contact Us</a>
                    }
                </div>
                <div class="hero-stats mt-5">
                    <div class="row">
                        <div class="col-4">
                            <div class="stat-item">
                                <div class="stat-number">15+</div>
                                <div class="stat-label">Years Experience</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-item">
                                <div class="stat-number">5000+</div>
                                <div class="stat-label">Installations</div>
                            </div>
                        </div>
                        <div class="col-4">
                            <div class="stat-item">
                                <div class="stat-number">24/7</div>
                                <div class="stat-label">Support</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="hero-image-container">
                    <img src="~/img/security-pattern.svg" alt="Security Systems" class="img-fluid hero-image">
                    <div class="hero-shape-1"></div>
                    <div class="hero-shape-2"></div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section" id="features">
    <div class="container-fluid">
        <div class="section-header text-center">
            <h2>Why Choose Us</h2>
            <p>We deliver comprehensive security solutions with advanced technology and expert service</p>
        </div>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-shield-check"></i>
                    </div>
                    <h3>Advanced Technology</h3>
                    <p>Our systems use the latest security technology with AI-powered analytics and smart detection capabilities.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-phone"></i>
                    </div>
                    <h3>Remote Monitoring</h3>
                    <p>Control and monitor your security systems from anywhere using our mobile app with real-time alerts.</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-card">
                    <div class="feature-icon">
                        <i class="bi bi-headset"></i>
                    </div>
                    <h3>Expert Support</h3>
                    <p>Our professional team provides 24/7 technical support and rapid response to all security concerns.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Services Section -->
<section class="services-section" id="services">
    <div class="container-fluid">
        <div class="section-header text-center">
            <h2>Our Security Solutions</h2>
            <p>Comprehensive protection for residential and commercial properties</p>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="service-card">
                    <div class="service-image">
                        <img src="img/cctv.jpg" alt="CCTV Systems" class="img-fluid">
                        <div class="service-overlay">
                            <i class="bi bi-camera-video"></i>
                        </div>
                    </div>
                    <div class="service-content">
                        <h3>CCTV Systems</h3>
                        <p>High-definition surveillance cameras with advanced motion detection and night vision capabilities.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="service-card">
                    <div class="service-image">
                        <img src="img/alarm_system.jpg" alt="Alarm Systems" class="img-fluid">
                        <div class="service-overlay">
                            <i class="bi bi-bell"></i>
                        </div>
                    </div>
                    <div class="service-content">
                        <h3>Alarm Systems</h3>
                        <p>Advanced intrusion detection with immediate alerts and integrated response protocols.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="service-card">
                    <div class="service-image">
                        <img src="img/access_control.jpg" alt="Access Control" class="img-fluid">
                        <div class="service-overlay">
                            <i class="bi bi-fingerprint"></i>
                        </div>
                    </div>
                    <div class="service-content">
                        <h3>Access Control</h3>
                        <p>Secure entry systems with biometric authentication and mobile access management.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="service-card">
                    <div class="service-image">
                        <img src="img/fire_detection.webp" alt="Fire Detection" class="img-fluid">
                        <div class="service-overlay">
                            <i class="bi bi-fire"></i>
                        </div>
                    </div>
                    <div class="service-content">
                        <h3>Fire Detection</h3>
                        <p>Early warning systems with heat and smoke sensors for comprehensive fire protection.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="service-card">
                    <div class="service-image">
                        <img src="img/smart_home.jpg" alt="Smart Home Security" class="img-fluid">
                        <div class="service-overlay">
                            <i class="bi bi-house-door"></i>
                        </div>
                    </div>
                    <div class="service-content">
                        <h3>Smart Home Security</h3>
                        <p>Integrated solutions with automation features for complete home protection and control.</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="service-card">
                    <div class="service-image">
                        <img src="img/maintenance_services.jpg" alt="Maintenance Services" class="img-fluid">
                        <div class="service-overlay">
                            <i class="bi bi-tools"></i>
                        </div>
                    </div>
                    <div class="service-content">
                        <h3>Maintenance Services</h3>
                        <p>Regular system checks and preventative maintenance to ensure optimal security performance.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Process Section -->
<section class="process-section">
    <div class="container-fluid">
        <div class="section-header text-center">
            <h2>How We Work</h2>
            <p>Our streamlined process ensures a seamless security solution implementation</p>
        </div>
        <div class="process-timeline">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="process-step">
                        <div class="process-number">1</div>
                        <div class="process-icon">
                            <i class="bi bi-chat-dots"></i>
                        </div>
                        <h3>Consultation</h3>
                        <p>We assess your security needs and provide expert recommendations.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="process-step">
                        <div class="process-number">2</div>
                        <div class="process-icon">
                            <i class="bi bi-clipboard-check"></i>
                        </div>
                        <h3>Design</h3>
                        <p>Our team creates a customized security system design for your property.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="process-step">
                        <div class="process-number">3</div>
                        <div class="process-icon">
                            <i class="bi bi-gear"></i>
                        </div>
                        <h3>Installation</h3>
                        <p>Professional installation by our certified technicians.</p>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="process-step">
                        <div class="process-number">4</div>
                        <div class="process-icon">
                            <i class="bi bi-shield-check"></i>
                        </div>
                        <h3>Support</h3>
                        <p>Ongoing maintenance and 24/7 technical support.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

