                        <div class="testimonial-info">
                            <h4>Stefan Georgiev</h4>
                            <p>Property Manager</p>
                            <div class="testimonial-rating">
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                                <i class="bi bi-star-fill"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="container-fluid">
        <div class="cta-content">
            <h2 class="cta-title">Ready to Enhance Your Security?</h2>
            <p class="cta-text">Contact us today for a free consultation and personalized security assessment.</p>
            <div class="cta-buttons">
                @if (User.Identity.IsAuthenticated)
                {
                    <a asp-controller="SecuritySystemOrder" asp-action="Create" class="btn btn-cta-primary">Create Order</a>
                }
                else
                {
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-cta-primary">Get Started</a>
                }
                <a href="#" class="btn btn-cta-secondary">Learn More</a>
            </div>
        </div>
    </div>
</section>



